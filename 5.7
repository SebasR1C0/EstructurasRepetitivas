using namespace std;
void espacio(int b) {
	for (int a = 1; a <= b; a++) {
		cout << " ";
	}
}
void ale(int n) {
	int a = n;
	for (int i = 1; i <= n; i++) {
		espacio(a);
		a--;
		for (int j = 1; j <= i; j++) {
			cout << j;
		}
		for (int c = i-1; c >= 1; c--) {
			cout << c;
		}
		 cout << endl;
	}
}
