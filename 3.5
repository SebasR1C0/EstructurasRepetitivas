#include <iostream>
#include <cstdlib>
#include <conio.h>
using namespace std;
void ale(int n) {
	double suma = 1.00, multi = 1.00, a = -1;
	for (int i = 2; i <= n; i++) {
		multi = multi * a * i;
		suma = suma + i / multi;
	}
	cout << "La suma es : " << suma << endl;
}
int main() {
	int a;
	cout << "Ingrese el valor de n: "; cin >> a;
	ale(a);
	return 0;
}
