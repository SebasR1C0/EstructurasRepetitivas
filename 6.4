int hora() {
	int a;
	do {
		cout << "Hora de la emergencia (Entero positivo entre 0 y 23): ";
		cin >> a;
	} while (a > 23 || a < 0);
	return a;
}
char origen() {
	char b;
	do {
		cout << "Origen de la emergencia (N: Naturaleza; I: Intervencion del hombre): ";
		cin >> b;
		b = toupper(b);
	} while (b != 'N' && b != 'I');
	return b;
}
char tipo() {
	char t;
	do {
		cout << "Tipo de emergencia (E: Ecologica; S: Sanitaria; R: Radioactiva): ";
		cin >> t;
		t = toupper(t);
	} while (t != 'E' && t != 'S' && t != 'R' && t != 'F');
	return t;
}
