#include <iostream>
#include <conio.h>
using namespace std;
void imp(int a) {
	int suma = 1, b = 1;
	cout << "El cuadrado del valor ingresado es: 1";
	while (suma < a*a) {
		b += 2;
		suma = suma + b;
		cout << " + " << b;
	}
	cout << " = " << a*a<< endl;
}
int main() {
	int a;
	cout << "Ingrese el numero " << endl;
	cin >> a;
	imp(a);
	return 0;
}
