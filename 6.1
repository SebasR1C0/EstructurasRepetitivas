#include <iostream>
#include <cstdlib>
#include <conio.h>
using namespace std;
double cub(double a, int n) {
	double cua = 1.00;
	for (int i = 1; i <= n+1; i++) {
		cua = cua * a;
	}
	return cua;
}
double cua(double a, int n) {
	double cua = 1.00;
	for (int i = 1; i <= n; i++) {
		cua = cua * a;
	}
	return cua;
}
int fac(int n) {
	int fact = 1;
	for (int a = 1; a <= n; a++) {
		fact = fact * a;
	}
	return fact;
}
int main() {
	int n;
	double a, b, ab = -1.00, suma = 0.00;
	do {
		cout << "Ingrese el valor de a: ";
		cin >> a;
	} while (a > 6 || 4 > a);
	do {
		cout << "Ingrese el valor de b: ";
		cin >> b;
	} while (b > 3 || 1 > b);
	do {
		cout << "Ingrese el valor de n: ";
		cin >> n;
	} while (n > 10 || 1 > n);
	for (int i = 1; i <= n; i++) {
		ab = ab * -1;
		double numerador = cua(a, i) * cub(b, i);
		double denominador = (a - b) * fac(i);
		suma = suma + ab * numerador / denominador;
	}
	cout << "El valor de la sumatoria es: S = " << suma << endl;
	return 0;
}
